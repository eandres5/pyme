<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pyme.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F5F5">

    <ContentPage.Content>
        <StackLayout Padding="30" VerticalOptions="Center" Spacing="20">

            <Image Source="https://www.pymesecuador.org/assets/images/logo_licoreria.png"
                   HeightRequest="120"
                   WidthRequest="120"
                   HorizontalOptions="Center"
                   Aspect="AspectFit"/>
            
            <!-- Título -->
            <Label Text="Iniciar Sesión" 
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333"/>

            <!-- Usuario -->
            <Frame CornerRadius="10" Padding="8" BackgroundColor="White" HasShadow="True">
                <Entry x:Name="txtUser"
                       Placeholder="Usuario"
                       PlaceholderColor="Gray"
                       TextColor="Black"
                       BackgroundColor="Transparent"/>
            </Frame>

            <!-- Contraseña -->
            <Frame CornerRadius="10" Padding="8" BackgroundColor="White" HasShadow="True">
                <Entry x:Name="txtPassword"
                       Placeholder="Contraseña"
                       PlaceholderColor="Gray"
                       TextColor="Black"
                       IsPassword="True"
                       BackgroundColor="Transparent"/>
            </Frame>

            <!-- Botón Ingresar -->
            <Button Text="Ingresar"
                    Clicked="Button_Clicked"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
